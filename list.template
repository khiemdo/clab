{
    u32     count; 
    u32     capacity; 
    $T*     buffer; 
    void    (*clrfun)($T* element); 
    s32     (*cmpfun)($T x, $T y); 
    
    List_$T(u32 capacity, 
            void(*clrfun)($T*) = null, 
            s32(*cmpfun)($T, $T) = null)
    {
        this->count = 0; 
        this->capacity = capacity; 
        this->buffer = CALLOC($T, capacity); 
        this->clrfun = clrfun; 
        this->cmpfun = cmpfun; 
    }
    

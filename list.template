    {
        $T ret = first(); 
        removeat(0); 
        return ret; 
    }
    
    $T first()
    {
        return buffer[0]; 
    }
    
    $T last()
    {
        return buffer[count - 1]; 
    }
    
    void destroy()
    {
        free(buffer); 
    }
    
    void add($T value)
    {
        if (count >= capacity)
        {
            capacity <<= 1; 
            buffer = RALLOC(buffer, $T, capacity); 
        }
        buffer[count++] = value; 
    }
    
    void removeat(u32 index)
    {
        for (u32 i = index, cnt = count - index - 1; cnt > 0; i++, cnt--)
        buffer[i] = buffer[i + 1]; 
        if (clrfun) clrfun(&buffer[count - 1]); 
        count--; 
    }
    
    s32 find($T value)
    {
        FOR(count)
            if (cmpfun(buffer[i], value))
                return i;
        return -1;
    }
    
    void remove($T value)
    {
        s32 index = find(value); 
        if (index == -1)
        return; 
        removeat(index); 
    }
    
